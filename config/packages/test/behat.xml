<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="app.behat.context.template" class="App\Tests\Behat\Context\TemplateContext">
            <argument type="service" id="app.tests.behat.page.home" />
            <argument type="service" id="app.tests.behat.page.country" />
            <argument type="service" id="app.tests.behat.page.login" />
        </service>
        <service id="app.tests.behat.page.home" class="App\Tests\Behat\Page\HomePage" parent="sylius.behat.page.shop.home" public="false" />
        <service id="app.tests.behat.page.country" class="App\Tests\Behat\Page\CountryPage" parent="sylius.behat.page.admin.country.create" public="false" />
        <service id="app.tests.behat.page.login" class="App\Tests\Behat\Page\LoginPage" parent="sylius.behat.page.shop.account.login" public="false" />
    </services>
</container>
